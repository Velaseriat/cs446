<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @brigade.name %>
</p>
<%= link_to 'Edit', edit_brigade_path(@brigade) %> |
<%= link_to 'Back', brigades_path %> |
<%= link_to 'Destroy', @brigade, method: :delete, data: { confirm: 'Are you sure?' } %>
<br>
<br>
<% if @brigade.soldiers.count == 0 %>
   <p>There are no soldiers in this brigade!</p> 
<% else %>
  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Atk</th>
        <th>Def</th>
        <th>Paradigm</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @soldiers.each do |soldier| %>
       <tr>
          <td><%= soldier.first_name %></td>
          <td><%= soldier.last_name %></td>
          <td><%= soldier.atk %></td>
          <td><%= soldier.def %></td>
          <td><%= soldier.paradigm %></td>
          <td><%= link_to 'Show', [@brigade, soldier] %></td>
          <td><%= link_to 'Edit', edit_brigade_soldier_path(@brigade, soldier) %></td>
          <td><%= link_to 'Destroy', [@brigade, soldier], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>
<%= link_to 'New Soldier', new_brigade_soldier_path(@brigade) %>